datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  date      DateTime  @default(now())
  messages  Message[] 
  carrinho  Carrinho[]
}

model Produto {
  id        Int      @id @default(autoincrement())
  nome      String
  descricao String
  preco     Float
  imagem    String
  criadoEm  DateTime @default(now())
  carrinho  Carrinho[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  date      DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Carrinho {
  id         Int      @id @default(autoincrement())
  usuario    User     @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  produto    Produto  @relation(fields: [produtoId], references: [id])
  produtoId  Int
  quantidade Int
}

